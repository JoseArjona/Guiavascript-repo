---
export interface Props {
  progress: string;
}

const { progress } = Astro.props;
---

<aside>
  
  <p class="txt-center">Aprendiendo JavaScript, Progreso de lecci√≥n: {progress}%</p>
  <div class="container">
    <div class="progress">
      <div class="progress-bar" style=`width:${progress}%`></div>
    </div>
  </div>
</aside>
<style>
  .progress {
    padding: 6px;

    background: rgba(0, 0, 0, 0.25);
    border-radius: 6px;
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.25),
      0 1px rgba(255, 255, 255, 0.08);
  }
  .progress-bar {
    height: 10px;
    border-radius: 6px;
    background-image: -webkit-linear-gradient(
      right,
      rgb(239, 224, 16),
      rgba(0, 0, 0, 0.25)
    );
  }
</style>
