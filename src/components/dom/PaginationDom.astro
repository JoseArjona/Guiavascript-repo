---
export interface Props {
  NamePagesDom: object;
}

const { NamePagesDom } = Astro.props;

// Añadimos la ruta "/" y "/basic-dom/" al array de rutas
const pages = [
  "/",
  ...Object.values(NamePagesDom.map((page) => page.url + "/")),
];
pages.sort((a, b) => a.localeCompare(b));

// Obtenemos el número de la página actual
const currentPage = pages.indexOf(Astro.url.pathname);

console.log(currentPage);

console.log(pages);
console.log(pages[currentPage]);

const prevLink =
  currentPage === 0 ? pages[currentPage] : pages[currentPage - 1];
let nextLink =
  currentPage === pages[pages.length - 1]
    ? pages[currentPage]
    : pages[currentPage + 1];

let btnNxt = "Siguiente";
if (currentPage === pages[pages.length - 1]) {
  btnNxt = "Finalizar";
  nextLink = "https://guiavascript.netlify.app/";
}
---

<div class="container" style="display: flex; justify-content: flex-end">
  <div>
    <a
      href={prevLink}
      class="btn gray margin-top margin-bottom"
      style="margin-right: 10px"
    >
      <!--?xml version="1.0" encoding="UTF-8"?-->
      <svg
        style="transform: scaleX(-1); vertical-align: top"
        width="20px"
        height="20px"
        stroke-width="1.42"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        color="#ffffff"
      >
        <path
          d="M18 10l-3 1.5-4-3-1 5.5 3.5 3 .5 4.5M18 8.5v13M10 17l-2 4.5M8.5 8.5C7 9.5 6 12 6 12l2 1M12 6.5a2 2 0 100-4 2 2 0 000 4z"
          stroke="#ffffff"
          stroke-width="1.42"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
       Atrás
    </a>
  </div>
  <div>
    {pages.map((page) => <li>{page}</li>)}
    <p>{Astro.url.pathname}</p>
    <p>{prevLink}</p>
    <p>{nextLink}</p>
    <p>{currentPage}</p>
  </div>
  <div>
    <a
      href={nextLink}
      class="btn gray margin-top margin-bottom"
      style="margin-left: 10px"
      >{btnNxt}
      <!--?xml version="1.0" encoding="UTF-8"?-->
      <svg
        width="20px"
        height="20px"
        stroke-width="1.51"
        viewBox="0 0 22 22"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        color="#ffffff"
      >
        <path
          d="M14 7a2 2 0 100-4 2 2 0 000 4zM18 21a3 3 0 100-6 3 3 0 000 6zM6 21a3 3 0 100-6 3 3 0 000 6zM11.5 18l1.5-4-4.882-2 3-3.5 3 2.5h3.5"
          stroke="#ffffff"
          stroke-width="1.51"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </a>
  </div>
</div>
