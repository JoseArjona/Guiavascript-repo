---
import Header from "../components/Header.astro";
import BaseHead from "../components/BaseHead.astro";
import "../styles/prism.css";
import Prismc from "../components/Prismc.astro";
import BaseNav from "../components/dom/BaseNav.astro";

export interface Props {
  title: string;
  description: string;
}

const { title } = Astro.props;
const { description } = Astro.props;

const URLBG = Astro.url.protocol + "//" + Astro.url.host + "/img/bgDom.svg";
const NamePagesDom = await Astro.glob("../pages/basic-doml/*.astro");
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="txt-white" style=`background-image: url(${URLBG});`>
    <Header NamePages={NamePagesDom} />
    <main class="container">
      <slot />
      <BaseNav NamePages={NamePagesDom} />
    </main>
    <footer>
      <p>
        <a href="https://developer.mozilla.org/es/docs/Web/JavaScript"
          >Consulta m√°s en MDN</a
        >
      </p>
      <Prismc codep="^_~" />
    </footer>
    <style>
      body {
        background-repeat: no-repeat;
        background-size: cover;
      }

      footer {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80px;
        background-color: #000;
      }
      footer p a {
        color: #ffffff;
        text-decoration: none;
        font-size: 1.2rem;
        margin-right: 10px;
      }
    </style>
  </body>
</html>
